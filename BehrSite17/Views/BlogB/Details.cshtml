<h2>Details</h2>
<h4>MainDetailViewModel</h4>
<hr />

<p>
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Add Picture", "PictCreate", new { fkid = Model.ID }, null) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.ID })
</p>
<div class="row">
    <div class="col-md-8">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.PostTitle)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PostTitle)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PostAuthor)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PostAuthor)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PostTags)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PostTags)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.EditDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.EditDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TitlePic)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TitlePic)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PostText)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PostText)
                </dd>





            </dl>
        </div>

    </div>
    <div class="col-md-4">
        <table class="table">
            @foreach (var item in Model.BlogPicts)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PicTitle)
                    </td>
                    <td>
                        <img src="~/Content/Images/BlogImages/@(item.PictPict)" style="max-width:200px" />
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", "Picts", new { id = item.ID }, null)
                    </td>
                </tr>

            }
        </table>
    </div>
</div>